{
  "name": "client",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "audit:performance": "node scripts/performance-audit.js",
    "audit:accessibility": "node scripts/accessibility-audit.js",
    "audit:final": "node scripts/final-audit.js",
    "audit:simple": "node scripts/simple-audit.js",
    "audit:bundle": "npm run build && npx bundlesize",
    "lighthouse": "npm run build && npm run preview & sleep 5 && npx lighthouse http://localhost:4173 --output=html --output-path=./lighthouse-report.html && pkill -f 'vite preview'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@react-three/drei": "^10.5.1",
    "@react-three/fiber": "^9.2.0",
    "@react-three/rapier": "^2.1.0",
    "@tailwindcss/vite": "^4.1.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gsap": "^3.13.0",
    "lucide-react": "^0.507.0",
    "meshline": "^3.3.1",
    "radix-ui": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "server": "workspace:*",
    "shared": "workspace:*",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.31",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "tw-animate-css": "^1.3.4",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "500kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ]
}
